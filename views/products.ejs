<h1>List of all Products</h1>

<h2>Categories</h2>

<% cats.forEach(cat => { %>
<ul>
  <li><a href="/products/<%= cat.title %>"><%= cat.title %></a></li>
</ul>
<% }) %>

<h2><a href="/">Add a Product</a></h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">IMG</th>
      <th scope="col">Product Title</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(function(p){ %>
    <tr>
      <td><img src="#" /></td>
      <td><a href="/product-detail/<%= p._id %>"><%= p.productTitle %></a></td>
    </tr>
    <% }) %>
  </tbody>
</table>
